{
  "name": "HapiJS JWT Auth API",
  "description": "Auth API that I created using HapiJS",
  "repository": "https://github.com/jrdrwn/hapi-jwt-auth-api",
  "keywords": ["nodejs", "rest-api", "hapijs"],
  "env": {
    "MONGODB_URL": {
      "description": "Go to this tutorial https://www.mongodb.com/docs/guides/atlas/connection-string/"
    },
    "JWT_SECRET": {
      "description": "https://stackoverflow.com/questions/31309759/what-is-secret-key-for-jwt-based-authentication-and-how-to-generate-it",
      "value": "secret"
    },
    "JWT_AUTH_EXPIRATION_DAYS": {
      "value": "30"
    },
    "JWT_RESET_PASSWORD_EXPIRATION_MINUTES": {
      "value": "30"
    },
    "JWT_VERIFY_EMAIL_EXPIRATION_MINUTES": {
      "value": "30"
    },
    "HOSTNAME": {
      "value": "0.0.0.0"
    },
    "PORT": {
      "value": "5000"
    },
    "SMTP_HOST": { "value": "smtp.example.com" },
    "SMTP_PORT": { "value": "587" },
    "SMTP_USER": { "value": "example.user" },
    "SMTP_PASS": { "value": "example.password" },
    "EMAIL_FROM": { "value": "example@domail.email" }
  }
}
